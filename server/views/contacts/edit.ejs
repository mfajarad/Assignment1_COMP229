<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--CONTENT-->
<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-6">
            <h1><%= title  %> </h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameField"> Name </label>
                    <input type="text" class="form-control" id="nameField" placeholder="Input contact" name="name" value="<%= contact.name %> "required>
                </div>

                <div class="form-group">
                    <label for="numberField"> Number </label>
                    <input type="text" class="form-control" id="numberField" placeholder="Input number" name="number" value="<%= contact.number %>"required>
                </div>

                <div class="form-group">
                    <label for="locationField"> Location </label>
                    <input type="text" class="form-control" id="locationField" placeholder="Input location" name="location" value="<%= contact.location %>" required>
                </div>

                <div class="form-group">
                    <label for="genderField"> Gender </label>
                    <input type="text" class="form-control" id="genderField" placeholder="Input gender" name="gender" value="<%= contact.gender %>" required>
                </div>

                <button class="btn btn-primary" type="submit" style="background-color: brown;">
                    <i class="fas fa-folder-plus"></i> Submit </button>
                    <a href="/contact-list" class="btn btn-warning" style="background-color: chocolate;">
                        <i class="fas fa-undo"></i> Cancel </a>

            </form>


        </div>
    </div>
</div>

<% include ../partials/bottom_nav.ejs %>

<% include ../partials/footer.ejs %>